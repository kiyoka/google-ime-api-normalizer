# 「へんかん」を変換する
task :henkan1 do
  sh "curl 'http://www.google.com/transliterate?langpair=ja-Hira|ja&text=%E3%81%B8%E3%82%93%E3%81%8B%E3%82%93' > result.json"
end

#  「ここではきものをぬぐ」を変換する
task :henkan2 do
  sh "curl 'http://www.google.com/transliterate?langpair=ja-Hira|ja&text=%e3%81%93%e3%81%93%e3%81%a7%e3%81%af%e3%81%8d%e3%82%82%e3%81%ae%e3%82%92%e3%81%ac%e3%81%90' > result.json"
end

